<ContentPage BackgroundColor="LavenderBlush"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CinemaManager.MAUI.MainPage"
             Title="Менеджер Кіносеансів">

    <StackLayout Padding="20">
        <Label Text="Список кінозалів:" FontSize="24" FontAttributes="Bold" Margin="0,0,0,10"/>

        <CollectionView x:Name="HallsCollection" SelectionMode="Single" SelectionChanged="OnHallSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="15" BorderColor="Gray" CornerRadius="8">
                        <StackLayout>
                            <Label Text="{Binding Name}" FontSize="18" TextColor="Blue" FontAttributes="Bold"/>
                            <Label Text="{Binding HallType, StringFormat='Тип: {0}'}"/>
                            <Label Text="{Binding SeatsCount, StringFormat='Місць: {0}'}"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>