<ContentPage BackgroundColor="LavenderBlush"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CinemaManager.MAUI.SessionDetailsPage"
             Title="Деталі Сеансу">

    <StackLayout Padding="20" Spacing="10">
        <Label x:Name="MovieTitleLabel" FontSize="26" TextColor="RoyalBlue" FontAttributes="Bold"/>
        <Label x:Name="YearLabel" FontSize="14" TextColor="Gray" />

        <BoxView HeightRequest="1" Color="Gray" Margin="0,10"/>

        <Label x:Name="GenreLabel" FontSize="18"/>
        <Label x:Name="DurationLabel" FontSize="18"/>
        <Label x:Name="TimeLabel" FontSize="18" FontAttributes="Italic"/>

        <Label x:Name="IdLabel" FontSize="10" TextColor="Silver" Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>